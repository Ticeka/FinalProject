@page
@model FinalProject.Pages.Admin.DashboardModel
@using System.Text.Json
@{
    ViewData["Title"] = "Admin Dashboard";
    var vm = Model.VM;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
}

<div class="container-fluid my-4 admin-dashboard">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="page-title">Admin Dashboard</h1>
        <div class="d-flex gap-2">
            <span class="badge-brand">Live</span>
        </div>
    </div>

    <!-- KPI GRID -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="kpi-card">
                <div class="kpi-title">Beers</div>
                <div class="kpi-value">@vm.TotalBeers</div>
                <div class="kpi-sub">รายการทั้งหมด</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="kpi-card">
                <div class="kpi-title">Users</div>
                <div class="kpi-value">@vm.TotalUsers</div>
                <div class="kpi-sub">บัญชีผู้ใช้</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="kpi-card">
                <div class="kpi-title">Ratings</div>
                <div class="kpi-value small">@vm.RatingsCount</div>
                <div class="kpi-sub">Avg @vm.RatingsAvg.ToString("0.00") / 5</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="kpi-card">
                <div class="kpi-title">Favorites</div>
                <div class="kpi-value">@vm.TotalFavorites</div>
                <div class="kpi-sub">ยอดกดถูกใจ</div>
            </div>
        </div>

        <div class="col-6 col-md-4">
            <div class="kpi-card">
                <div class="kpi-title">Comments</div>
                <div class="kpi-value small">@vm.TotalComments</div>
                <div class="kpi-sub"></div>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div class="kpi-card">
                <div class="kpi-title">User Reviews</div>
                <div class="kpi-value small">@vm.TotalReviews</div>
                <div class="kpi-sub"></div>
            </div>
        </div>
    

    <!-- CHARTS -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-lg-7">
            <div class="card-lite">
                <div class="card-header px-3 py-2 d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Ratings (Last 30 days)</h5>
                </div>
                <div class="p-3">
                    @if (vm.RatingsOverTime?.Count > 0)
                    {
                        <canvas id="ratingsLine" aria-label="Ratings over time" role="img"></canvas>
                    }
                    else
                    {
                        <div class="text-muted">ไม่มีข้อมูลเพียงพอสำหรับกราฟ</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-5">
            <div class="card-lite">
                <div class="card-header px-3 py-2">
                    <h5 class="mb-0">Beers by Province</h5>
                </div>
                <div class="p-3">
                    @if (vm.BeersByProvince?.Count > 0)
                    {
                        <canvas id="provinceBar" aria-label="Beers by province" role="img"></canvas>
                    }
                    else
                    {
                        <div class="text-muted">ยังไม่มีการกระจายตามจังหวัด</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- TABLES -->
    <div class="row g-3">
        <div class="col-12 col-xl-6">
            <div class="card-table">
                <div class="card-header px-3 py-2">
                    <h5 class="mb-0">Top Rated Beers</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-modern mb-0">
                        <thead>
                            <tr>
                                <th style="width:56px">#</th>
                                <th>ชื่อ</th>
                                <th>จังหวัด</th>
                                <th class="text-end">Avg</th>
                                <th class="text-end">Votes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (vm.TopRatedBeers?.Count > 0)
                            {
                                var i = 1;
                                foreach (var b in vm.TopRatedBeers)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td class="truncate">@b.Name</td>
                                        <td>@b.Province</td>
                                        <td class="text-end">@b.Avg.ToString("0.00")</td>
                                        <td class="text-end">@b.Count</td>
                                    </tr>
                                    i++;
                                }
                            }
                            else
                            {
                                <tr><td colspan="5" class="text-muted">ยังไม่มีข้อมูล</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-6">
            <div class="card-table">
                <div class="card-header px-3 py-2">
                    <h5 class="mb-0">Most Favorited</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-modern mb-0">
                        <thead>
                            <tr>
                                <th style="width:56px">#</th>
                                <th>ชื่อ</th>
                                <th>จังหวัด</th>
                                <th class="text-end">Favorites</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (vm.MostFavoritedBeers?.Count > 0)
                            {
                                var i = 1;
                                foreach (var b in vm.MostFavoritedBeers)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td class="truncate">@b.Name</td>
                                        <td>@b.Province</td>
                                        <td class="text-end">@b.Favorites</td>
                                    </tr>
                                    i++;
                                }
                            }
                            else
                            {
                                <tr><td colspan="4" class="text-muted">ยังไม่มีข้อมูล</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card-table">
                <div class="card-header px-3 py-2 d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Recent Comments</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-modern mb-0">
                        <thead>
                            <tr>
                                <th style="width:120px">เวลา</th>
                                <th>เบียร์</th>
                                <th>โดย</th>
                                <th>ข้อความ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (vm.RecentComments?.Count > 0)
                            {
                                foreach (var c in vm.RecentComments)
                                {
                                    <tr>
                                        <td>@c.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td class="truncate">@c.BeerName</td>
                                        <td>@c.UserName</td>
                                        <td class="truncate">@c.Body</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="4" class="text-muted">ยังไม่มีคอมเมนต์</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ==== DATA FEEDS FOR admin-dashboard.js ==== -->
<script id="ratings-data" type="application/json">
    @Html.Raw(JsonSerializer.Serialize(vm.RatingsOverTime ?? new List<FinalProject.ViewModels.DailyRatingPoint>()))
</script>
<script id="provinces-data" type="application/json">
    @Html.Raw(JsonSerializer.Serialize(vm.BeersByProvince ?? new List<FinalProject.ViewModels.ProvinceCount>()))
</script>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/admin-dashboard.js" asp-append-version="true"></script>
}
