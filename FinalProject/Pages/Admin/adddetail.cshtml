@page "/Admin/Beers/AddDetail"
@model FinalProject.Pages.Admin.Beers.AddDetailModel
@{
    ViewData["Title"] = "Add Detail";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container my-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3">เพิ่มเครื่องดื่มท้องถิ่น</h1>
        <div>
            <a class="btn btn-outline-secondary btn-sm" asp-page="/Admin/Index">กลับหน้า Admin</a>
        </div>
    </div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Basic -->
        <div class="card mb-3">
            <div class="card-header fw-semibold">ข้อมูลหลัก</div>
            <div class="card-body row g-3">
                <div class="col-md-6">
                    <label asp-for="Input.Name" class="form-label"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Province" class="form-label"></label>
                    <input asp-for="Input.Province" class="form-control" />
                    <span asp-validation-for="Input.Province" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="Input.Description" class="form-label"></label>
                    <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.District" class="form-label"></label>
                    <input asp-for="Input.District" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Type" class="form-label"></label>
                    <input asp-for="Input.Type" class="form-control" />
                </div>
                <div class="col-md-12">
                    <label asp-for="Input.Address" class="form-label"></label>
                    <input asp-for="Input.Address" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Latitude" class="form-label"></label>
                    <input asp-for="Input.Latitude" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Longitude" class="form-label"></label>
                    <input asp-for="Input.Longitude" class="form-control" />
                </div>
            </div>
        </div>

        <!-- Links & Contact -->
        <div class="card mb-3">
            <div class="card-header fw-semibold">ลิงก์/การติดต่อ</div>
            <div class="card-body row g-3">
                <div class="col-md-6">
                    <label asp-for="Input.ImageUrl" class="form-label"></label>
                    <input asp-for="Input.ImageUrl" class="form-control" placeholder="/images/beer.jpg หรือ https://..." />
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Website" class="form-label"></label>
                    <input asp-for="Input.Website" class="form-control" placeholder="domain.com หรือ https://domain.com" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.FacebookPage" class="form-label"></label>
                    <input asp-for="Input.FacebookPage" class="form-control" placeholder="facebook.com/..." />
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.OpenHours" class="form-label"></label>
                    <input asp-for="Input.OpenHours" class="form-control" placeholder="เช่น 10:00-18:00" />
                </div>
            </div>
        </div>

        <!-- Product Info -->
        <div class="card mb-3">
            <div class="card-header fw-semibold">ข้อมูลผลิตภัณฑ์</div>
            <div class="card-body row g-3">
                <div class="col-md-3">
                    <label asp-for="Input.AlcoholLevel" class="form-label"></label>
                    <input asp-for="Input.AlcoholLevel" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.Price" class="form-label"></label>
                    <input asp-for="Input.Price" class="form-control" />
                    <span asp-validation-for="Input.Price" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.Volume" class="form-label"></label>
                    <input asp-for="Input.Volume" class="form-control" placeholder="ml" />
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.ProductYear" class="form-label"></label>
                    <input asp-for="Input.ProductYear" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.PlaceOfOrigin" class="form-label"></label>
                    <input asp-for="Input.PlaceOfOrigin" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Region" class="form-label"></label>
                    <input asp-for="Input.Region" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.Creator" class="form-label"></label>
                    <input asp-for="Input.Creator" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.MainIngredients" class="form-label"></label>
                    <input asp-for="Input.MainIngredients" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.ProductMethod" class="form-label"></label>
                    <input asp-for="Input.ProductMethod" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Rights" class="form-label"></label>
                    <input asp-for="Input.Rights" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="Input.Distributor" class="form-label"></label>
                    <input asp-for="Input.Distributor" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.DistributorChanel" class="form-label"></label>
                    <input asp-for="Input.DistributorChanel" class="form-control" />
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.Award" class="form-label"></label>
                    <input asp-for="Input.Award" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.ProductId" class="form-label"></label>
                    <input asp-for="Input.ProductId" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.TypeOfLiquor" class="form-label"></label>
                    <input asp-for="Input.TypeOfLiquor" class="form-control" />
                </div>

                <div class="col-md-12">
                    <label asp-for="Input.Notes" class="form-label"></label>
                    <textarea asp-for="Input.Notes" class="form-control" rows="2"></textarea>
                </div>

                <div class="col-md-4">
                    <label asp-for="Input.AverageRating" class="form-label"></label>
                    <input asp-for="Input.AverageRating" class="form-control" />
                </div>
            </div>
        </div>

        <!-- Pairings -->
        <div class="card mb-4">
            <div class="card-header fw-semibold">Pairings</div>
            <div class="card-body row g-3">
                <div class="col-md-4">
                    <label asp-for="Input.Flavor" class="form-label"></label>
                    <input asp-for="Input.Flavor" class="form-control" placeholder="เช่น citrus / malty / floral" />
                </div>
                <div class="col-md-2">
                    <label asp-for="Input.FlavorIntensity" class="form-label"></label>
                    <input asp-for="Input.FlavorIntensity" class="form-control" placeholder="0-10" />
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.FoodName" class="form-label"></label>
                    <input asp-for="Input.FoodName" class="form-control" placeholder="อาหารที่เหมาะ" />
                </div>
                <div class="col-md-3">
                    <label asp-for="Input.FoodReason" class="form-label"></label>
                    <input asp-for="Input.FoodReason" class="form-control" placeholder="เหตุผล" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Input.Mood" class="form-label"></label>
                    <input asp-for="Input.Mood" class="form-control" placeholder="บรรยากาศ/โอกาส" />
                </div>
                <div class="col-md-8">
                    <label asp-for="Input.MoodReason" class="form-label"></label>
                    <input asp-for="Input.MoodReason" class="form-control" placeholder="เหตุผล" />
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">บันทึก</button>
            <a asp-page="/Admin/Index" class="btn btn-outline-secondary">ยกเลิก</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
