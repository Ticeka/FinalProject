@using Microsoft.AspNetCore.Identity
@using FinalProject.Models
@inject SignInManager<FinalProject.Models.ApplicationUser> SignInManager
@inject UserManager<FinalProject.Models.ApplicationUser> UserManager

@{
    // ===== ข้อมูลผู้ใช้/โปรไฟล์ =====
    ApplicationUser? me = null;
    string avatar = "";
    string displayName = "";
    bool isSignedIn = SignInManager.IsSignedIn(User);

    if (isSignedIn)
    {
        me = await UserManager.GetUserAsync(User);
        displayName = !string.IsNullOrWhiteSpace(me?.DisplayName)
            ? me!.DisplayName
            : await UserManager.GetUserNameAsync(me!);

        avatar = string.IsNullOrWhiteSpace(me?.AvatarUrl) ? "" : me!.AvatarUrl;
    }

    // ===== ฟังก์ชันสร้างตัวอักษรย่อจากชื่อ =====
    string Initials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "?";
        var parts = name.Trim().Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0].Substring(0, 1).ToUpperInvariant();
        return (parts[0].Substring(0, 1) + parts[^1].Substring(0, 1)).ToUpperInvariant();
    }
    var initials = isSignedIn ? Initials(displayName) : "";

    // ===== สร้างสีพื้นหลังอวตาร์แบบคงที่จากชื่อ =====
    int HashHue(string s)
    {
        if (string.IsNullOrEmpty(s)) return 210;
        unchecked
        {
            int hash = 23;
            foreach (var ch in s) hash = hash * 31 + ch;
            if (hash < 0) hash = -hash;
            return hash % 360;
        }
    }
    var hue = HashHue(displayName);
    bool hasAvatar = !string.IsNullOrWhiteSpace(avatar);

    // ===== หน้าปัจจุบัน (สำหรับไฮไลท์เมนู) =====
    var currentPage = (ViewContext?.RouteData?.Values["page"]?.ToString() ?? "").ToLowerInvariant();

    // ===== บทบาท/คอนเท็กซ์หน้า =====
    bool isAdmin = User?.IsInRole("Admin") ?? false;
    bool onDetail = currentPage.StartsWith("/detail");
    bool onAdmin = currentPage.StartsWith("/admin");
    bool onAdd = currentPage.StartsWith("/admin/adddetail");
    bool onList = currentPage.StartsWith("/list");

    int currentId = 0;
    var idVal = ViewContext?.RouteData?.Values["id"]?.ToString();
    if (!string.IsNullOrWhiteSpace(idVal))
        int.TryParse(idVal, out currentId);

    // ===== ตัวช่วยกำหนดสถานะ active ให้ลิงก์เมนู =====
    bool IsActive(string p)
    {
        p = p.ToLowerInvariant();

        if (p == "/index") return currentPage == "/index" || currentPage == "";
        if (p == "/list") return currentPage == "/list" || currentPage.StartsWith("/detail");
        if (p == "/admin/dashboard") return currentPage == "/admin/dashboard";
        if (p == "/admin/adddetail") return currentPage == "/admin/adddetail" || currentPage.StartsWith("/admin/adddetail/");
        if (p == "/flavormatch") return currentPage == "/flavormatch";
        if (p == "/aboutus") return currentPage == "/aboutus";

        return currentPage == p;
    }
    Func<string, string> active = p => IsActive(p) ? "active fw-semibold" : "";
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "Sip & Trip") - Sip &amp; Trip</title>

    <meta name="description" content="Sip &amp; Trip – แผนที่เครื่องดื่มท้องถิ่นไทย สำรวจคราฟต์เบียร์ ไวน์ และสุราทั่วประเทศ พร้อมรายละเอียดสถานที่และรสชาติ" />

    <!-- ฟอนต์/ไลบรารีหลัก -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalProject.styles.css" asp-append-version="true" />

    <!-- ธีมของส่วนหัว/แถบนำทาง -->
    <link rel="stylesheet" href="~/css/layout-theme.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="sticky-top">
        <!-- ใช้คลาส .app-navbar เพื่อให้สไตล์เฉพาะของเรา -->
        <nav class="navbar navbar-expand-lg app-navbar">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-page="/Index" title="ไปหน้าแรก">
                    <img src="~/images/logo.png" alt="โลโก้ Sip & Trip" class="brand-mark" />
                    <span class="brand-text">Sip &amp; Trip</span>
                    @if (isAdmin)
                    {
                        <span class="badge text-bg-warning ms-1">ผู้ดูแล</span>
                    }
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="เปิด/ปิดเมนู">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    @* ===== เมนูหลัก (ซ้าย) ===== *@
                    @if (!isAdmin)
                    {
                        <!-- เมนูสำหรับผู้ใช้ทั่วไป -->
                        <ul class="navbar-nav align-items-center me-3">
                            <li class="nav-item">
                                <a class="nav-link @active("/index")" asp-area="" asp-page="/Index">🏠 หน้าแรก</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @active("/list")" asp-area="" asp-page="/List">📋 รายการเครื่องดื่ม</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @active("/flavormatch")" asp-area="" asp-page="/FlavorMatch">🍷 จับคู่รสชาติ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @active("/aboutus")" asp-area="" asp-page="/AboutUs">ℹ️ เกี่ยวกับเรา</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <!-- เมนูสำหรับผู้ดูแล -->
                        <ul class="navbar-nav align-items-center me-3">
                            <li class="nav-item">
                                <a class="nav-link @active("/admin/adddetail")"
                                   asp-area=""
                                   asp-page="/Admin/AddDetail">➕ เพิ่มรายการ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @active("/list")" asp-area="" asp-page="/List">📋 รายการ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @active("/admin/dashboard")" asp-area="" asp-page="/Admin/Dashboard">📊 แดชบอร์ด</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @active("/admin/users/index")" asp-area="" asp-page="/Admin/Users/Index">👥 ผู้ใช้</a>
                            </li>

                            @* ปุ่มตามบริบทหน้า *@
                            @if (onDetail && currentId > 0)
                            {
                                <li class="nav-item">
                                    <a class="btn btn-warning ms-lg-2" asp-page="/Admin/EditDetail" asp-route-id="@currentId">✏️ แก้ไขรายการนี้</a>
                                </li>
                            }
                            @if (onAdmin && currentId > 0)
                            {
                                <li class="nav-item">
                                    <a class="btn btn-outline-secondary ms-lg-2" asp-page="/Detail" asp-route-id="@currentId">👁️ ดูหน้าแสดงผล</a>
                                </li>
                            }
                        </ul>
                    }

                    @* ===== โปรไฟล์/เข้าสู่ระบบ (ขวา) ===== *@
                    <ul class="navbar-nav align-items-center">
                        @if (isSignedIn)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    @if (hasAvatar)
                                    {
                                        <img src="@avatar" alt="อวตาร์" class="nav-avatar" />
                                    }
                                    else
                                    {
                                        <span class="nav-avatar-fallback"
                                              style="background: conic-gradient(from 180deg, hsl(@hue,85%,55%), hsl(@( (hue+60)%360 ),85%,55%) 50%, hsl(@( (hue+120)%360 ),85%,55%));"
                                              title="@displayName">
                                            @initials
                                            <svg class="avatar-icon" viewBox="0 0 24 24" aria-hidden="true">
                                                <circle cx="12" cy="8" r="4"></circle>
                                                <path d="M4 20a8 8 0 0 1 16 0"></path>
                                            </svg>
                                        </span>
                                    }
                                    <span class="text-dark">@displayName</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userDropdown">
                                    <li class="px-3 py-2">
                                        <div class="d-flex align-items-center gap-2">
                                            @if (hasAvatar)
                                            {
                                                <img src="@avatar" class="avatar-lg" alt="อวตาร์" />
                                            }
                                            else
                                            {
                                                <span class="avatar-lg nav-avatar-fallback"
                                                      style="background: conic-gradient(from 180deg, hsl(@hue,85%,55%), hsl(@( (hue+60)%360 ),85%,55%) 50%, hsl(@( (hue+120)%360 ),85%,55%));">
                                                    @initials
                                                    <svg class="avatar-icon" viewBox="0 0 24 24" aria-hidden="true">
                                                        <circle cx="12" cy="8" r="4"></circle>
                                                        <path d="M4 20a8 8 0 0 1 16 0"></path>
                                                    </svg>
                                                </span>
                                            }
                                            <div>
                                                <div class="fw-semibold">@displayName</div>
                                            </div>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>

                                    <li><a class="dropdown-item" asp-page="/Profile">โปรไฟล์ของฉัน</a></li>
                                    <li>
                                        <form class="px-2 py-1" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                            <button type="submit" class="dropdown-item">ออกจากระบบ</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-1">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">🔑 เข้าสู่ระบบ</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-ghost" asp-area="Identity" asp-page="/Account/Register">สมัครสมาชิก</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container text-center">
            &copy; @(DateTime.Now.Year + 543) • Sip &amp; Trip • แผนที่เครื่องดื่มท้องถิ่นไทย
        </div>
    </footer>

    <!-- สคริปต์หลัก -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- สคริปต์ควบคุมการแสดงผลแถบนำทาง -->
    <script src="~/js/layout-nav.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
