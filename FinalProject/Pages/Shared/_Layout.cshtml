@using Microsoft.AspNetCore.Identity
@using FinalProject.Models
@inject SignInManager<FinalProject.Models.ApplicationUser> SignInManager
@inject UserManager<FinalProject.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sip &amp; Trip</title>

    <meta name="description" content="Sip &amp; Trip – แผนที่เครื่องดื่มท้องถิ่นไทย สำรวจคราฟต์เบียร์ ไวน์ และสุราทั่วประเทศ พร้อมรายละเอียดสถานที่และรสชาติ" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalProject.styles.css" asp-append-version="true" />

    <style>
        :root {
            --bg: #f6f8fb;
            --card: #ffffff;
            --ink: #1f2937;
            --muted: #6b7280;
            --brand: #2563eb;
            --ring: rgba(37,99,235,.2)
        }

        html, body {
            height: 100%;
        }

        body {
            background: var(--bg);
            color: var(--ink);
            font-family: 'Inter',system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
        }

        .navbar {
            background: linear-gradient(180deg,#f8fafc,#ffffff);
            border-bottom: 1px solid #e6ebf2;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--ink);
        }

            .navbar-brand:hover {
                color: #0f172a;
            }

        .nav-link {
            color: #334155;
            padding: .5rem .9rem;
            border-radius: 8px;
            transition: all .15s ease;
        }

            .nav-link:hover {
                background: #f1f5f9;
                color: #0f172a;
            }

            .nav-link.active {
                color: #fff !important;
                background: var(--brand);
                box-shadow: 0 2px 6px var(--ring);
            }

        .container {
            max-width: 1100px;
        }

        footer {
            background: #ffffff;
            border-top: 1px solid #e6ebf2;
            color: #64748b;
            padding: 16px 0;
        }
    </style>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">🍹 Sip &amp; Trip</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    @{
                        var path = Context?.Request?.Path.Value?.ToLowerInvariant() ?? "";
                        bool IsActive(string p)
                        {
                            p = p.ToLowerInvariant();
                            if (p == "/index") return path == "/" || path == "/index";
                            if (p == "/list") return path.StartsWith("/list") || path.StartsWith("/detail");
                            return path.StartsWith(p);
                        }
                        Func<string, string> active = p => IsActive(p) ? "active fw-semibold" : "";
                    }
                    <ul class="navbar-nav align-items-center me-3">
                        <li class="nav-item">
                            <a class="nav-link @active("/Index")" asp-area="" asp-page="/Index">🏠 หน้าแรก</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @active("/List")" asp-area="" asp-page="/List">📋 รายการเครื่องดื่ม</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @active("/AboutUs")" asp-area="" asp-page="/AboutUs">ℹ️ เกี่ยวกับเรา</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">👤 @UserManager.GetUserName(User)</span>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <button type="submit" class="btn btn-link nav-link">ออกจากระบบ</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">🔑 เข้าสู่ระบบ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">📝 สมัครสมาชิก</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container text-center">
            &copy; 2568 • Sip &amp; Trip • แผนที่เครื่องดื่มท้องถิ่นไทย
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
