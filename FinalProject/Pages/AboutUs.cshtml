@page
@{
    ViewData["Title"] = "About Us — Sip & Trip";
}
<link rel="stylesheet" href="~/css/aboutus.css" />
<script defer src="~/js/aboutus.js"></script>

<!-- ================== HERO ================== -->
<header class="au-hero">
    <div class="au-container">
        <div class="au-hero__grid">
            <div class="au-hero__copy">
                <span class="eyebrow">เกี่ยวกับเรา</span>
                <h1 class="title">Sip & Trip — แพลตฟอร์มสำรวจ “เครื่องดื่มท้องถิ่นไทย”</h1>
                <p class="subtitle">
                    ค้นหาเรื่องราวรสชาติจากชุมชน ท่องเมืองผ่านแก้วโปรด ภาพชัด อ่านง่าย สีสันกำลังดี
                </p>
                <div class="cta">
                    <a href="/List" class="btn btn-solid">ดูรายการทั้งหมด</a>
                    <a href="/Map" class="btn btn-ghost">สำรวจบนแผนที่</a>
                </div>

                <ul class="hero-points">
                    <li class="chip chip-blue">แนะนำจากผู้ใช้จริง</li>
                    <li class="chip chip-teal">แผนที่ใช้งานง่าย</li>
                    <li class="chip chip-amber">อัปเดตต่อเนื่อง</li>
                </ul>
            </div>

            <div class="au-hero__visual">
                <!-- ใส่รูปของคุณเองที่โฟลเดอร์ wwwroot/img/about/* -->
                <figure class="card-photo lift">
                    <img src="/img/about/a.jpg" alt="ชิมเครื่องดื่มท้องถิ่น">
                </figure>
                <figure class="card-photo lift delay">
                    <img src="/img/about/b.jpg" alt="บรรยากาศชุมชน">
                </figure>
                <figure class="card-photo lift">
                    <img src="/img/about/c.jpg" alt="ส่วนผสมท้องถิ่น">
                </figure>
                <div class="glow" aria-hidden="true"></div>
            </div>
        </div>
    </div>
    <div class="stripe" aria-hidden="true"></div>
</header>

<!-- ================== HIGHLIGHTS ================== -->
<section class="au-highlights">
    <div class="au-container">
        <div class="hl-grid">
            <article class="hl-card hl-blue reveal">
                <h3>คัดคุณภาพ</h3>
                <p>ข้อมูลเรียบง่าย อ่านไว ไม่รกตา</p>
            </article>
            <article class="hl-card hl-teal reveal">
                <h3>ค้นหาไว</h3>
                <p>จัดหมวดหมู่ชัดเจน เห็นภาพทันที</p>
            </article>
            <article class="hl-card hl-violet reveal">
                <h3>สวยพอดี</h3>
                <p>ขนาดตัวอักษร/การ์ดพอดีตา ทุกหน้าจอ</p>
            </article>
        </div>
    </div>
</section>

<!-- ================== STATS ================== -->
<section class="au-stats">
    <div class="au-container">
        <ul class="stats">
            <!-- ถ้าต้องการผูกค่าจาก backend: ใส่จำนวนจริงที่ data-target ได้เลย -->
            <li class="stat reveal">
                <div class="value count-up" data-target="128">0</div>
                <div class="label">ผู้ผลิต/แบรนด์</div>
            </li>
            <li class="stat reveal">
                <div class="value count-up" data-target="346">0</div>
                <div class="label">รายการเครื่องดื่ม</div>
            </li>
            <li class="stat reveal">
                <div class="value count-up" data-target="51">0</div>
                <div class="label">จังหวัด/พื้นที่</div>
            </li>
            <li class="stat reveal">
                <div class="value count-up" data-target="972">0</div>
                <div class="label">รีวิว/ให้คะแนน</div>
            </li>
        </ul>
    </div>
</section>

<!-- ================== FEATURES ================== -->
<section class="au-features">
    <div class="au-container">
        <div class="grid-3">
            <article class="f-card reveal">
                <h3>ดีไซน์สะอาด</h3>
                <p>เว้นวรรคพอดี สีสันกำลังดี ใช้งานง่าย</p>
            </article>
            <article class="f-card reveal">
                <h3>เน้นภาพเล่าเรื่อง</h3>
                <p>แสดงภาพตัวอย่างช่วยตัดสินใจเร็ว</p>
            </article>
            <article class="f-card reveal">
                <h3>เร็วและเบา</h3>
                <p>โค้ดกระชับ ไม่มีของฟุ่มเฟือย</p>
            </article>
        </div>
    </div>
</section>

<!-- ================== GALLERY (ใส่รูปได้/ไม่มีก็สวย) ================== -->
<section class="au-gallery">
    <div class="au-container">
        <div class="gallery-grid">
            <figure class="g-item tall reveal">
                <img src="/img/about/g1.jpg" alt="แหล่งผลิตชุมชน">
                <figcaption>ชุมชน</figcaption>
            </figure>
            <figure class="g-item reveal">
                <img src="/img/about/g2.jpg" alt="บาร์ท้องถิ่น">
                <figcaption>บาร์ท้องถิ่น</figcaption>
            </figure>
            <figure class="g-item wide reveal">
                <img src="/img/about/g3.jpg" alt="ส่วนผสมสดใหม่">
                <figcaption>วัตถุดิบ</figcaption>
            </figure>
            <figure class="g-item reveal">
                <img src="/img/about/g4.jpg" alt="เมนูแนะนำ">
                <figcaption>เมนูแนะนำ</figcaption>
            </figure>
        </div>
    </div>
</section>

<!-- ================== TESTIMONIALS ================== -->
<section class="au-testimonials">
    <div class="au-container">
        <div id="testiWrap" class="testi-wrap">
            <figure class="testi-card show">
                <blockquote>“หน้า About ใหม่ สีสวยสะอาด อ่านง่ายมาก”</blockquote>
                <figcaption>&#64;foodietrip</figcaption>
            </figure>
            <figure class="testi-card">
                <blockquote>“ไฮไลต์ชัดเจน เลือกจุดเที่ยว/ชิมได้ไว”</blockquote>
                <figcaption>&#64;wanderth</figcaption>
            </figure>
            <figure class="testi-card">
                <blockquote>“ขนาดทุกอย่างพอดีตา ไม่ล้น ไม่โล่ง”</blockquote>
                <figcaption>&#64;nattyreview</figcaption>
            </figure>
        </div>
    </div>
</section>

<!-- ================== FAQ (native <details>) ================== -->
<section class="au-faq">
    <div class="au-container">
        <h2 class="section-title">ถาม–ตอบ</h2>
        <details class="qa reveal">
            <summary>ข้อมูลมาจากไหน?</summary>
            <div>คัดจากผู้ใช้ รีวิวจริง และทีมคอนเทนต์ ตรวจสอบซ้ำก่อนเผยแพร่</div>
        </details>
        <details class="qa reveal">
            <summary>รองรับมือถือไหม?</summary>
            <div>รองรับเต็มรูปแบบ ขนาดและระยะถูกปรับให้พอดีตา</div>
        </details>
        <details class="qa reveal">
            <summary>ถ้าร้านของฉันอยากขึ้นหน้าเว็บ?</summary>
            <div>ติดต่อทีมงานผ่านเมนู “ติดต่อเรา” เพื่อส่งข้อมูลตรวจสอบ</div>
        </details>
    </div>
</section>

<!-- ================== CTA ================== -->
<section class="au-cta">
    <div class="au-container">
        <div class="cta-box">
            <div class="cta-copy">
                <h3>เริ่มสำรวจรสชาติท้องถิ่นวันนี้</h3>
                <p>ค้นพบเครื่องดื่มถูกใจจากทุกภูมิภาค</p>
            </div>
            <div class="cta-actions">
                <a href="/Map" class="btn btn-solid">ดูบนแผนที่</a>
                <a href="/List" class="btn btn-ghost">ดูทั้งหมด</a>
            </div>
        </div>
    </div>
</section>
