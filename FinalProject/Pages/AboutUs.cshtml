    </section>

    <!-- สถิติ (ตัวเลขวิ่ง) -->
    <section class="mb-4">
        <div class="stats-grid">
            <div class="stat">
                <div class="stat-num" data-target="120">0</div>
                <div class="stat-label">รายการเครื่องดื่มในระบบ</div>
            </div>
            <div class="stat">
                <div class="stat-num" data-target="77">0</div>
                <div class="stat-label">จังหวัดที่ตั้งใจจะครอบคลุม</div>
            </div>
            <div class="stat">
                <div class="stat-num" data-target="5">0</div>
