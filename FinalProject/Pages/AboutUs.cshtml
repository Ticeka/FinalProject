        <div class="quiz-card">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h5 class="mb-0">อยากได้คำแนะนำสไตล์ไหน?</h5>
                <small class="text-muted">คลิกเลือก 1 ตัวเลือก</small>
            </div>
            <div class="d-flex flex-wrap gap-2">
                <button class="pill-btn" data-answer="light">ดื่มเบา ๆ ชิล ๆ</button>
                <button class="pill-btn" data-answer="bold">เข้มจัดจ้าน</button>
                <button class="pill-btn" data-answer="local">โคตรท้องถิ่นแท้</button>
                <button class="pill-btn" data-answer="surprise">เซอร์ไพรส์ฉันที!</button>
            </div>
            <div id="quizResult" class="text-muted small mt-2"></div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta rounded-4 p-4 p-md-5 mb-4 text-center">
        <h3 class="fw-bold mb-2">พร้อมออกทริปแล้วหรือยัง?</h3>
        <p class="text-muted mb-3">เริ่มจากจังหวัดที่อยากไป แล้วปล่อยให้เราแนะนำที่ “จิบ” ให้คุณ</p>
        <a asp-page="/Index" class="btn btn-lg btn-primary">ไปหน้าแผนที่</a>
    </section>
</div>

@section Scripts {
    <script>
        /* ===== Counters (ตัวเลขวิ่งเมื่อเลื่อนถึง) ===== */
        (function(){
          const els = document.querySelectorAll('.stat-num');
          if(!els.length) return;
          const animate = (el)=>{
            const target = parseInt(el.dataset.target||'0',10);
            const dur = 800;
            const t0 = performance.now();
            function step(t){
              const p = Math.min(1, (t - t0)/dur);
              el.textContent = Math.floor(target * p).toLocaleString('th-TH');
              if(p<1) requestAnimationFrame(step);
            }
            requestAnimationFrame(step);
          };
          const io = new IntersectionObserver(entries=>{
            entries.forEach(e=>{
              if(e.isIntersecting){ animate(e.target); io.unobserve(e.target); }
            });
          }, {threshold:.4});
          els.forEach(el=>io.observe(el));
        })();

        /* ===== Confetti Emoji (เบา ๆ ไม่ใช้ไลบ์ราลี) ===== */
        (function(){
          const btn = document.getElementById('confettiBtn');
          if(!btn) return;
          const EMOJIS = ['🍺','🍷','🥃','🍹','✨'];
          btn.addEventListener('click', ()=>{
            for(let i=0;i<40;i++){
              const s = document.createElement('div');
              s.className='confetti';
              s.textContent = EMOJIS[Math.floor(Math.random()*EMOJIS.length)];
              s.style.left = Math.random()*100+'vw';
              s.style.animationDuration = (1.2+Math.random()*1.4)+'s';
              s.style.fontSize = (18+Math.random()*14)+'px';
              document.body.appendChild(s);
              setTimeout(()=>s.remove(), 2200);
            }
          });
        })();

        /* ===== Mini quiz ===== */
        (function(){
          const out = document.getElementById('quizResult');
          document.querySelectorAll('.pill-btn').forEach(btn=>{
            btn.addEventListener('click', ()=>{
              document.querySelectorAll('.pill-btn').forEach(b=>b.classList.remove('active'));
              btn.classList.add('active');
              const a = btn.dataset.answer;
              const msg = {
                light: 'ลองลาเกอร์/เซสชั่น IPA แอลกอฮอล์ไม่สูง จิบเพลิน ๆ 🍺',
                bold: 'จัดสเตาท์/บาร์เลย์ไวน์ เข้มเต็มตัว ดุดันแต่กลมกล่อม 🥃',
                local: 'ชิมคราฟต์ท้องถิ่น + ผลไม้พื้นถิ่น กลิ่นอายบ้านเราแท้ ๆ 🌾',
                surprise: 'สุ่มสไตล์ลับจากแผนที่ — เปิดประตูสู่รสชาติใหม่ ๆ 🎲'
              }[a] || '';
              out.textContent = msg;
            });
          });
        })();
    </script>
}

<style>
    :root {
        --bg: #f6f8fb;
        --card: #fff;
        --ink: #1f2937;
        --muted: #6b7280;
        --brand: #2563eb;
        --ring: rgba(37,99,235,.2);
    }

    /* Hero */
    .about-hero {
        background: radial-gradient(1200px 400px at 20% -10%, #dbeafe, transparent), linear-gradient(180deg,#eff6ff,#ffffff);
        border: 1px solid #e6ebf2;
    }

    .text-hero-sub {
        color: var(--muted);
    }

    .about-blob {
        width: 360px;
        height: 260px;
        border-radius: 24px;
        background: conic-gradient(from 180deg at 50% 50%, #fee2e2, #fef9c3, #d1fae5, #e0e7ff, #fee2e2);
        filter: blur(14px) saturate(130%);
        opacity: .7;
    }

    /* Feature cards */
    .feature-card {
        background: var(--card);
        border: 1px solid #e6ebf2;
        border-radius: 14px;
        padding: 16px;
        transition: transform .15s ease, box-shadow .15s ease;
    }

        .feature-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 24px rgba(0,0,0,.06);
        }

        .feature-card .icon {
            font-size: 26px;
        }

        .feature-card .chip {
            display: inline-block;
            margin-top: 6px;
            font-size: 12px;
            padding: 4px 10px;
            border-radius: 999px;
            border: 1px solid #e2e8f0;
            background: #f8fafc;
            color: #0f172a;
        }

    /* Stats */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(3,minmax(0,1fr));
        gap: 12px;
    }

    .stat {
        padding: 16px;
        background: var(--card);
        border: 1px solid #e6ebf2;
        border-radius: 14px;
        text-align: center;
    }

    .stat-num {
        font-size: 34px;
        font-weight: 800;
        line-height: 1;
    }

    .stat-label {
        color: #64748b;
        margin-top: 6px;
        font-size: 14px;
    }

    /* Timeline */
    .timeline {
        list-style: none;
        padding-left: 0;
        margin: 0;
        border-left: 2px dashed #e5e7eb;
    }

        .timeline li {
            position: relative;
            padding: 0 0 14px 16px;
        }

        .timeline .dot {
            position: absolute;
            left: -13px;
            top: 0;
            width: 26px;
            height: 26px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #fff;
            border: 1px solid #e2e8f0;
            box-shadow: 0 2px 6px rgba(0,0,0,.06);
            font-size: 16px;
        }

        .timeline .body {
            padding-top: 2px;
        }

    /* Quiz */
    .quiz-card {
        background: var(--card);
        border: 1px solid #e6ebf2;
        border-radius: 14px;
        padding: 16px;
    }

    .pill-btn {
        border: 1px solid #e2e8f0;
        background: #f8fafc;
        border-radius: 999px;
        padding: 6px 12px;
        font-size: .95rem;
        cursor: pointer;
        transition: all .15s ease;
    }

        .pill-btn:hover {
            background: #eef2f7;
        }

        .pill-btn.active {
            background: var(--brand);
            color: #fff;
            border-color: var(--brand);
        }

    /* CTA */
    .cta {
        background: linear-gradient(180deg,#ffffff,#f8fafc);
        border: 1px solid #e6ebf2;
    }

    /* Confetti */
    .confetti {
        position: fixed;
        top: -10vh;
        will-change: transform;
        animation: fall linear forwards;
        pointer-events: none;
        z-index: 9999;
    }
    @@keyframes fall {
        to

    {
        transform: translateY(120vh) rotate(360deg);
        opacity: .9;
    }

    }

    /* Responsive */
    @@media (max-width: 768px) {
        .stats-grid

    {
        grid-template-columns: 1fr;
    }

    }
</style>
