@page
@model LoginModel
@{
    ViewData["Title"] = "เข้าสู่ระบบ";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<style>
    :root {
        --bg: #f6f8fb;
        --card: #ffffff;
        --ink: #1f2937;
        --muted: #6b7280;
        --brand: #2563eb;
        --brand-600: #1f51bf;
        --ring: rgba(37,99,235,.2);
    }

    body {
        font-family: 'Inter',system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;
        color: var(--ink);
    }

    .page-hero {
        background: radial-gradient(1100px 380px at 20% -10%,#dbeafe,transparent), linear-gradient(180deg,#eff6ff,#ffffff);
        border: 1px solid #e6ebf2;
    }

    .text-hero-sub {
        color: var(--muted);
    }

    .auth-card {
        background: var(--card);
        border: 1px solid #e6ebf2;
        border-radius: 16px;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #d7deea;
        box-shadow: none;
    }

        .form-control:focus {
            border-color: var(--brand);
            box-shadow: 0 0 0 3px var(--ring);
        }

    .btn-primary {
        background: var(--brand);
        border-color: var(--brand);
        font-weight: 600;
    }

        .btn-primary:hover {
            background: var(--brand-600);
            border-color: var(--brand-600);
        }

    .muted {
        color: var(--muted);
    }
</style>

<header class="page-hero rounded-4 mb-4 p-4 p-md-5">
    <div class="container">
        <h1 class="h3 h-md-2 fw-bold mb-1">🔐 เข้าสู่ระบบ Sip &amp; Trip</h1>
        <p class="mb-0 text-hero-sub">ล็อกอินเพื่อรีวิว บันทึกรายการโปรด และใช้งานฟีเจอร์พิเศษ</p>
    </div>
</header>

<div class="container" style="max-width:980px;">
    <div class="row g-4">
        <!-- ฟอร์มล็อกอิน -->
        <div class="col-lg-6">
            <div class="auth-card p-4 p-md-5">
                <form id="account" method="post" novalidate>
                    <h2 class="h5 fw-semibold mb-3">เข้าสู่ระบบด้วยอีเมล</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">อีเมล</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">รหัสผ่าน</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMeChk" />
                        <label class="form-check-label" for="rememberMeChk">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary w-100">เข้าสู่ระบบ</button>

                    <div class="d-flex justify-content-between mt-3 small">
                        <a id="forgot-password" asp-page="./ForgotPassword">ลืมรหัสผ่าน?</a>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">สมัครสมาชิกใหม่</a>
                    </div>

                    <div class="mt-2 small">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">ส่งอีเมลยืนยันอีกครั้ง</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- ผู้ให้บริการภายนอก -->
        <div class="col-lg-6">
            <div class="auth-card p-4 p-md-5 h-100">
                <section>
                    <h2 class="h5 fw-semibold mb-3">เข้าสู่ระบบด้วยบัญชีอื่น</h2>
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div class="muted small">
                            ยังไม่ได้ตั้งค่า Google/Facebook ฯลฯ
                            ดูวิธีเชื่อมต่อผู้ให้บริการภายนอกได้ที่
                            <a href="https://learn.microsoft.com/aspnet/core/security/authentication/social" target="_blank">เอกสารนี้</a>.
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-light border"
                                            name="provider" value="@provider.Name"
                                            title="เข้าสู่ระบบด้วย @provider.DisplayName">
                                        เข้าสู่ระบบด้วย @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                    <div class="mt-4 small muted">
                        เคล็ดลับ: ถ้าคุณสมัครด้วยอีเมลอยู่แล้ว แนะนำให้เข้าสู่ระบบด้วยอีเมลเดิมเพื่อหลีกเลี่ยงบัญชีซ้ำ
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
